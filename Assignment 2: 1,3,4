      },
      "outputs": [],
      "source": [
        "def getValues(n: int) -> list:\n",
        "  '''\n",
        "  Creates a list of weights. The weights are given by the user:\n",
        "  Input:\n",
        "  - number of items in the list\n",
        "  Output:\n",
        "  - a list of weights\n",
        "  '''\n",
        "  items = []\n",
        "\n",
        "  for i in range(n):\n",
        "    try:\n",
        "      item = float(input(f'Enter weight value {i+1}: '))\n",
        "      items.append(item)\n",
        "    except ValueError as e:\n",
        "      print(f\"Invalid input: {e}. Please enter a number.\")\n",
        "  return items\n",
        "\n",
        "def calcAverage(alist: list) -> float:\n",
        "  '''\n",
        "  Input:\n",
        "  - a list of weights\n",
        "  Output:\n",
        "  - Average values: excludes the first two items\n",
        "  '''\n",
        "  try:\n",
        "    if len(alist) < 3:\n",
        "      return 0.0\n",
        "\n",
        "    return sum(alist[2:]) / len(alist[2:])\n",
        "  except ZeroDivisionError:\n",
        "    print(\"List is empty\")\n",
        "    return float('nan')\n",
        "\n",
        "def main():\n",
        "  try:\n",
        "    num = int(input('Enter number of items: '))\n",
        "    if num <= 0:\n",
        "      raise ValueError('Number of items must be positive')\n",
        "    weights = getValues(num)\n",
        "    avg = calcAverage(weights)\n",
        "    print(f'Average weight: {avg} lbs.')\n",
        "  except ValueError as e:\n",
        "    print(f\"Error: {e}\")\n",
        "\n",
        "main()"
      ]
    },
